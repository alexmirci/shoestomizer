<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- linking login style sheet -->
    <link rel='stylesheet' href='/styles/sneakersStyle.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <title>Order Confirmation</title>

</head>

<body>

    <div class="navbar">
        <div class="menu">
            <button  class="hamburger" onclick="showSidebar()">â˜°</button>
        </div>
        <a  style="color:rgb(157, 232, 255);" href="/"><div class="title">shoestomizer.</div></a>
        <div class="welcoming">Welcome, <%= name    %>!</div>
    </div>


    <div class="sidebar" id="sidebar">

        <a href="#About"></i> About</a>

        <a href="#contact">Contact</a>

        <form action="/logout?_method=DELETE" method="POST">
            <button class="aButton" type="submit"> Logout
            </button>
        </form>

        <button  class="aButton" onclick="hideSidebar()"> Close
            
        </button>

    </div> 
    
    <div class="sidebarImages" id="sidebarImages">

        <i class="fa fa-fw fa-home"></i>

        <i class="fa fa-fw fa-envelope"></i>

        <i class="fa fa-fw fa-user"></i> 

        <i class="fa fa-fw fa-times" onclick="hideSidebar()" style="cursor:pointer"></i> 


    </div>
    

    <h1>ORDERS</h1>

    <div class="container" style="font-size: 24px; font-weight: bolder;">
        <% orders.forEach(order =>{  %> 
            <% if (order.username === name){ %> 
            <img height="300px" width="300px" src="public/designUploads/<%=order.designName%>"> </img>
            <div >sneaker name : <%= order.name %></div>
            <div >order made by:  <%= order.username %></div>
            <div >total price  :  <%= order.price %></div>
            <div >address      :  <%= order.address %></div>
            <div >phone number :  <%= order.phonenumber %></div>
            <div >uploaded design:  <%= order.designName %></div>
            <br><br>
            <% } %> 





        <% }) %> 
    </div>


    <a class="back" href="/">inapoi</a>




    <script src="/js_functional/index.js"></script>
</body>

